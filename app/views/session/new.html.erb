<h1>Login</h1>

<%= form_tag login_path do %>
  <fieldset>
    <%= label_tag :identifier, 'either your username or email' %>
    <%= text_field_tag :identifier %>
  </fieldset>
  <fieldset>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </fieldset>

  <%= submit_tag 'login'  %>

<% end %>
