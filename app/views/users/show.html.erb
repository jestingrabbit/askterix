<div class="container">
  <div class="row">

    <div class="col-xs-9 col-xs-offset-2">
      <h3 class="user--show--heading"><%= @user.name %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <% if @user.avatar.present? %>
        <%= image_tag @user.avatar, :class => "margin-0-auto-rounded"%>
      <% end %>
      <dl class="dl-horizontal">
        <dt> email </dt>
        <dd> <%= @user.email %> </dd>

        <% if @user.link.present? %>
          <dt> link </dt>
          <dd> <%= @user.link %> </dd>
        <% end %>

        <% if @user.bio.present? %>
          <dt> bio </dt>
          <dd> <%= @user.bio %> </dd>
        <% end %>
      </dl>
    </div>
  </div>


  <% if @user == @current_user %>
    <div class="middle-form">
      <%= link_to "Edit Profile?", users_edit_path(@current_user), :class => ["btn", "btn-primary", "btn-lg"]%>
    </div>
  <% end %>
</div>
