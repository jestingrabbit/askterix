
<div class="row a_toolbar">
<div class="col-xs-10"></div>
<div class="col-xs-1 text-right">
<% if @current_user == answer.user %>
  <span>
  &nbsp; <%= link_to edit_question_answer_path(@question.id, answer.id) do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  <% end %>
  </span>
</div>
<div class="col-xs-1 text-right">
  <span>
    &nbsp; <%= link_to(question_answer_path(@question.id, answer.id),
                :method => 'delete',
                :data => {:confirm => 'Delete Your Answer?'}) do %>
      <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
    <% end %>
  </span>

<% end %>
</div>
</div>
