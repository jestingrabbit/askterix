
<% if  @current_user == @question.user %>
  <span>
    &nbsp; <%= link_to edit_question_path(@question.id) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
  </span>
  <% unless @question.answers.any? or @question.score > 2 %>
    <span>
      &nbsp; <%= link_to(
                  @question,
                  :method => 'delete',
                  :data => {:confirm => 'Delete Your Question?'}) do %>
        <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
      <% end %>
    </span>
  <% end %>
<% end %>
